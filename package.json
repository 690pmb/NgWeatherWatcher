{
  "name": "ng-weather-watcher",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "mobile": "ng serve --host 0.0.0.0 --disable-host-check",
    "dev": "ng serve --configuration dev",
    "build": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "lint": "run-s lint:**",
    "lint:stylelint": "stylelint \"**/*.scss\" verbose",
    "lint:lint": "eslint --max-warnings 0 .",
    "lint:format": "prettier --check .",
    "stylelint-check": "stylelint-config-prettier-check",
    "fix": "run-s fix:**",
    "fix:format": "prettier --write .",
    "fix:stylelint": "stylelint --fix \"**/*.scss\" verbose",
    "fix:fix": "eslint --max-warnings 0 --fix .",
    "compile": "tsc --noEmit",
    "prepare": "run-s prepare:*",
    "prepare:husky": "husky install",
    "prepare:compile": "pnpm compile",
    "pretest": "pnpm compile",
    "posttest": "pnpm lint",
    "up": "pnpm cache clean --force && pnpm update"
  },
  "engines": {
    "pnpm": ">=8",
    "node": ">=16.20.0 <20.0.0"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~14.3.0",
    "@angular/cdk": "~14.2.7",
    "@angular/common": "~14.3.0",
    "@angular/compiler": "~14.3.0",
    "@angular/core": "~14.3.0",
    "@angular/forms": "~14.3.0",
    "@angular/material": "~14.2.7",
    "@angular/platform-browser": "~14.3.0",
    "@angular/platform-browser-dynamic": "~14.3.0",
    "@angular/router": "~14.3.0",
    "@angular/service-worker": "~14.3.0",
    "@fortawesome/angular-fontawesome": "0.11.1",
    "@fortawesome/fontawesome-common-types": "^6.5.1",
    "@fortawesome/fontawesome-svg-core": "~1.2.36",
    "@fortawesome/free-solid-svg-icons": "6.1.2",
    "@ngx-translate/core": "14.0.0",
    "@ngx-translate/http-loader": "7.0.0",
    "class-transformer": "0.5.1",
    "hammerjs": "2.0.8",
    "jwt-decode": "3.1.2",
    "luxon": "~3.3.0",
    "ng2-nouislider": "2.0.0",
    "nouislider": "15.7.1",
    "reflect-metadata": "0.1.14",
    "rxjs": "6.6.7",
    "tslib": "2.4.1",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~14.2.13",
    "@angular-eslint/eslint-plugin": "~14.4.0",
    "@angular-eslint/eslint-plugin-template": "~14.4",
    "@angular-eslint/template-parser": "~14.4",
    "@angular/cli": "~14.2.13",
    "@angular/compiler-cli": "~14.3.0",
    "@types/luxon": "~3.3.8",
    "@types/node": "^16.18.79",
    "@typescript-eslint/eslint-plugin": "~6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-prettier": "5.1.3",
    "gts": "~5.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "npm-run-all": "4.1.5",
    "postcss": "^8.4.34",
    "postcss-sass": "0.5.0",
    "prettier": "^3.2.5",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "9.0.5",
    "stylelint-config-sass-guidelines": "9.0.1",
    "stylelint-config-standard": "26.0.0",
    "typescript": "4.6.4"
  },
  "lint-staged": {
    "*.{ts, html}": "eslint --max-warnings 0 --fix",
    "*": "prettier --ignore-unknown --write",
    "*.scss": "stylelint --fix"
  }
}
