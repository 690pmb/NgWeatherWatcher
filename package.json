{
  "name": "ng-weather-watcher",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "mobile": "ng serve --host 0.0.0.0 --disable-host-check",
    "dev": "ng serve --configuration dev",
    "build": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "lint": "run-s lint:**",
    "lint:stylelint": "stylelint \"**/*.scss\" verbose",
    "lint:lint": "eslint --max-warnings 0 .",
    "lint:format": "prettier --check .",
    "stylelint-check": "stylelint-config-prettier-check",
    "fix": "run-s fix:**",
    "fix:format": "prettier --write .",
    "fix:stylelint": "stylelint --fix \"**/*.scss\" verbose",
    "fix:fix": "eslint --max-warnings 0 --fix .",
    "compile": "tsc --noEmit",
    "prepare": "run-s prepare:*",
    "prepare:husky": "husky",
    "prepare:compile": "pnpm compile",
    "pretest": "pnpm compile",
    "posttest": "pnpm lint",
    "up": "pnpm store prune && pnpm update"
  },
  "engines": {
    "pnpm": ">=8",
    "node": ">=18.12 <20.0.0"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~15.2.10",
    "@angular/cdk": "~15.2.9",
    "@angular/common": "~15.2.10",
    "@angular/compiler": "~15.2.10",
    "@angular/core": "~15.2.10",
    "@angular/forms": "~15.2.10",
    "@angular/material": "~15.2.9",
    "@angular/platform-browser": "~15.2.10",
    "@angular/platform-browser-dynamic": "~15.2.10",
    "@angular/router": "~15.2.10",
    "@angular/service-worker": "~15.2.10",
    "@fortawesome/angular-fontawesome": "~0.12.1",
    "@fortawesome/fontawesome-common-types": "^6.6.0",
    "@fortawesome/fontawesome-svg-core": "~6.1.2",
    "@fortawesome/free-solid-svg-icons": "~6.1.2",
    "@ngx-translate/core": "14.0.0",
    "@ngx-translate/http-loader": "7.0.0",
    "class-transformer": "0.5.1",
    "hammerjs": "2.0.8",
    "jwt-decode": "4.0.0",
    "luxon": "~3.5.0",
    "ng2-nouislider": "2.0.0",
    "nouislider": "15.8.1",
    "reflect-metadata": "0.2.2",
    "rxjs": "6.6.7",
    "tslib": "~2.5.3",
    "zone.js": "~0.13.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~15.2.11",
    "@angular-eslint/eslint-plugin": "~15.2.1",
    "@angular-eslint/eslint-plugin-template": "~15.2.1",
    "@angular-eslint/template-parser": "~15.2.1",
    "@angular/cli": "~15.2.11",
    "@angular/compiler-cli": "~15.2.10",
    "@types/luxon": "~3.4.2",
    "@types/node": "^18.19.55",
    "@typescript-eslint/eslint-plugin": "~7.18.0",
    "@typescript-eslint/parser": "~7.18.0",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-n": "^17.10.3",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-prettier": "5.2.1",
    "gts": "~5.3.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "npm-run-all": "4.1.5",
    "postcss": "^8.4.47",
    "postcss-sass": "0.5.0",
    "stylelint": "^16.9.0",
    "stylelint-config-sass-guidelines": "~12.1.0",
    "stylelint-config-standard": "~36.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "typescript": "4.9.5"
  },
  "lint-staged": {
    "*.{ts, html}": "eslint --max-warnings 0 --fix",
    "*": "prettier --ignore-unknown --write",
    "*.scss": "stylelint --fix"
  }
}
